{
  "name": "tidy-app",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:cli": "pnpm --filter @tidy/cli test",
    "test:gui": "pnpm --filter @tidy/gui test",
    "test:core": "pnpm --filter @tidy/core test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "tauri:dev": "turbo run tauri:dev",
    "tauri:build": "turbo run tauri:build",
    "cargo:test": "cd apps/gui/src-tauri && cargo test",
    "cargo:check": "cd apps/gui/src-tauri && cargo check",
    "knip": "knip",
    "prepare": "husky",
    "types:generate": "cd apps/gui/src-tauri && cargo test export_bindings",
    "types:validate": "npx tsx scripts/validate-types.ts",
    "version:bump": "npx tsx scripts/bump-version.ts",
    "version:check": "npx tsx scripts/bump-version.ts --help"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "tsx": "^4.19.4",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "knip": "^5.80.0",
    "turbo": "^2.7.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@9.15.4"
}
