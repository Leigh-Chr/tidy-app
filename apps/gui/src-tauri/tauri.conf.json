{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tidy-app",
  "version": "0.2.0",
  "identifier": "com.tidy-app.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tidy-app",
        "width": 1024,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' http://localhost:* https://api.openai.com https://*.openai.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Intelligent file organization tool",
    "longDescription": "tidy-app helps you organize files using metadata-first renaming with optional LLM support.",
    "category": "Utility",
    "copyright": "2026 tidy-app",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "section": "utils",
        "priority": "optional"
      },
      "rpm": {
        "release": "1"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERGOUQ0RjQwRDI5Qzk1QjUKUldTMWxaelNRRStkM3dEZ2FUSW51VVRqRXN3b014cVZSMStWOTR3SklyREtndFJiL2hKSnpnN0IK",
      "endpoints": [
        "https://github.com/Leigh-Chr/tidy-app/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
